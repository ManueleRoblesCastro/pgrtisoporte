		br

		input(type='hidden' id='id_num_fila')
		
		form(class=['ui','form','segment'] method='get' id='form-detailOTm')
			div(class=['ui', 'four', 'fields'])
				div(class=['ui','field'])
					label(for='IdOT')= 'Identificador (ID, Autom√°tico)'
					input(type='text' name='IdOT' placeholder='0' id='id_IdOT' readonly)
				div(class=['ui','field'])
					label(for='FechaOT')= 'Fecha Inicial (aaaa/mm/dd)'
					div(class = ['ui', 'input', 'left', 'icon'])
